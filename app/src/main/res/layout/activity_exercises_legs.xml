<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk"
    tools:context=".Exercises_Legs">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness Business"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="667dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_bm_title1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Leg press"
                android:paddingTop="35dp"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/leg_press1" />

            <TextView
                android:id="@+id/tv_arms_content1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/legs1"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/tv_bm_title2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Leg curl"
                android:paddingTop="35dp"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/leg_curl1" />

            <TextView
                android:id="@+id/tv_arms_content2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/legs2"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/tv_bm_title3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Squat"
                android:paddingTop="35dp"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/squat1" />

            <TextView
                android:id="@+id/tv_arms_content3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/legs3"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:justificationMode="inter_word"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>